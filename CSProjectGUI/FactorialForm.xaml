<Window x:Class="CSProjectGUI.FactorialForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSProjectGUI"
        mc:Ignorable="d"
        Title="FactorialForm" Height="210.766" Width="500"  WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <StackPanel >
            <TextBlock TextAlignment="Center" Text="Calculate Factorial Of A Number"></TextBlock>
            <StackPanel Orientation="Vertical" Margin="50,20">
                <Label>Enter A Number </Label>
                <TextBox x:Name="f_number_txt" ></TextBox>
            </StackPanel>
           
            <StackPanel Orientation="Vertical" Margin="50,0">
                <Button Margin="0,0,0,10" Click="Button_Click" >Calculate</Button>
                <Button Click="Button_Click_1" >Close</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
