<Window x:Class="CSProjectGUI.AreaOfRectangleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSProjectGUI"
        mc:Ignorable="d"
        Title="AreaOfRectangleForm" Height="264.781" Width="500"  WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <StackPanel >
            <TextBlock TextAlignment="Center" Text="Calculate Area Of  A Rectangle"  ></TextBlock>
            <StackPanel Orientation="Vertical" Margin="50,20">
                <Label>Width Of Rectangle</Label>
                <TextBox x:Name="width_txt" ></TextBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="50,0">
                <Label>Height Of Rectangle</Label>
                <TextBox x:Name="height_txt"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="50,20">
                <Button Margin="0,0,0,10" Click="Button_Click_1" >Calculate</Button>
                <Button Click="Button_Click">Close</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
